<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>Users List</title>
    <link rel="stylesheet" href="/styles.css"> <!-- Optional: Link to your CSS file -->
</head>
<body>
    <h1>Users List</h1>
    
    <a href="/multer/add">Add New User</a>
    
    <table>
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Email</th>
                <th>Phone</th>
                <th>Date of Birth</th>
                <th>Profile Image</th>
                <th>Address</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <% if (users.length > 0) { %>
                <% users.forEach(function(user) { %>
                    <tr>
                        <td><%= user.id %></td>
                        <td><%= user.name %></td>
                        <td><%= user.email %></td>
                        <td><%= user.phone %></td>
                        <td><%= user.dob %></td>
                        <td>
                            <% if (user.profileImage) { %>
                                <!-- Corrected image path -->
                                <img src="/uploads/<%= user.profileImage %>" alt="Profile Image" width="100"/>
                                <% } else { %>
                                No Image
                            <% } %>
                        </td>
                        <td><%= user.address %></td>
                        <td>
                            <!-- Corrected routes -->
                            <a href="/multer/edit/<%= user.id %>">Edit</a> | 
                            <a href="/multer/delete/<%= user.id %>" onclick="return confirm('Are you sure you want to delete this user?')">Delete</a>
                        </td>
                    </tr>
                <% }); %>
            <% } else { %>
                <tr>
                    <td colspan="8">No users found.</td>
                </tr>
            <% } %>
        </tbody>
    </table>
    
</body>
</html>
